            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="peliculas"
                id="avatar"
                value="avatar"
              />
              <label class="form-check-label" for="avatar">Avatar</label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="peliculas"
                id="EEAAO"
                value="EEAAO"
              />
